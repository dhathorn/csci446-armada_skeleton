= render :partial => 'members/battleships/battle_ship_bar', :locals => {:battleship => @battleship}
%h1= "Edit #{@battleship.name}"
#image_float= image_tag(@battleship.image.url, :size => :large)
- form_for([:members, @battleship], :html => {:multipart => true}) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :image
    %br/
    = f.file_field :image
  %p
    = f.label :cost
    %br/
    = f.text_field :cost
  = f.submit 'Save'

= link_to 'Back', members_battleships_path
