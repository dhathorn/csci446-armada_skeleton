- form_for([:members, @battleship], :html => {:multipart => true}) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br/
    = f.text_area :name
  %p
    = f.label :description
    %br/
    = f.text_field :description
  %p
    = f.label :image
    %br/
    = f.file_field :image
  = f.submit 'Save'
